// time stamping to get the baseline after the blocking call to getc
Task task(char c) {
    #> printf("task %c \n", c);<#
}

		
Func char f(int i) {
#>
	char c;
    printf("Enter character %d: ", i);
	c = getc(stdin);
	RT_set_bl();
	<# async after (RT_sec * 1) task(c); #>
	return c;
<#
}

Reset {
    #> printf("Hello\n");
    char c = <#sync f(100);#>;
    printf("char = %c\n", c);
    <#
}
