


class IO<> {
	void print(int i) {
		RT_printf("%d\n", i);
	}
}


class Timer<> {
	int seconds := 8;
	IO<> output;

	Task tick () {
		seconds := seconds    -1;
		output.print(seconds);

		if (seconds) {
			async after 1 s tick();
		}
	}

	void init () {
		seconds := 8;
		//async every 1 s tick();
	}
}


class Root<> {
	Timer<> t;


	Reset {
		t.init();
		async after 1 s t.tick();
	}
}
