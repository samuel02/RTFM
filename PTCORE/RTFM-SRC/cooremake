#! /bin/sh

in=$1

mkdir -p tmp
echo cOOre-compiler ====================================================
../../RTFM-cOOre-compiler/src/Main.native -i $1 -o ./tmp/${in%.*}.core
echo core-compiler =====================================================
../../RTFM-core-compiler/src/Main.native -i ./tmp/${in%.*}.core -o ../Application/autogen.c
echo gcc ===============================================================
gcc ../RTFM-PT/RTFM-PT.c -o ../bin/${in%.*} -lpthread
rm ./tmp/${in%.*}.core


