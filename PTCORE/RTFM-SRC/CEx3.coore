// Multiple objects
class R<> { 
    Task task1 () {
        RT_printf("task1 R claimed\n");
    }
    
    Task task2 () {
        RT_printf("task2 R claimed\n");
        RT_sleep(5);
        RT_printf("task2 R released\n");
    }      
}

class Root<> { 
    R<> r;
    Reset {
        RT_printf("User reset\n");
        Async r.task2();
        Async after 1000000 r.task1();
    } 
}